{
    "env": {
        "es6": true,
        //"jasmine": true,
        "node": true,
        "protractor": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "complexity": "warn",
        "no-console": "off",
        "dot-notation": "error",
        "strict": 2,
        "no-trailing-spaces": 2,
        "no-extra-parens": 1,
        "curly": [
            2,
            "multi-line"
        ],
        "eqeqeq": [
            1,
            "smart"
        ],
        "no-alert": 2,
        "no-else-return": 1,
        "no-multi-spaces": 1,
        "one-var": [
            2,
            "never"
        ],
        "wrap-iife": [
            2,
            "inside"
        ],
        "comma-style": [
            2,
            "last"
        ],
        "comma-spacing": [
            2,
            {
                "before": false,
                "after": true
            }
        ],
        "no-unneeded-ternary": 2,
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-var": 2
    }
}